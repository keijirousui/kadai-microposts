<% if current_user.liking?(micropost) %>
  <%= form_for(current_user.likes.find_by(like_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :like_id, micropost.id %>
    <%= f.submit 'お気に入り解除', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.likes.build) do |f| %>
    <%= hidden_field_tag :like_id, micropost.id %>
    <%= f.submit 'お気に入り', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>
